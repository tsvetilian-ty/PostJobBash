{
    "manifestVersion": 1,
    "id": "post-job-bash",
    "name": "Post Job Bash",
    "version": "2.0.1",
    "publisher": "tsvetilian",
    "public": true,
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "LICENSE.md"
        }
    },
    "links": {
        "repository": {
            "uri": "https://github.com/tsvetilian-ty/PostJobBash"
        },
        "issues": {
            "uri": "https://github.com/tsvetilian-ty/PostJobBash/issues"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/tsvetilian-ty/PostJobBash"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "PostJobBash is a Bash@3 based task that allows you to executes bash scripts (across platforms) in the post-job phase of the job!",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/extension-icon.png"        
    },
    "files": [
        {
            "path": "task"
        }
    ],
    "contributions": [
        {
            "id": "custom-post-job-bash-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "task"
            }
        }
    ]
}